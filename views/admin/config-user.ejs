<%- include('../includes/begin.ejs') %>
    <link rel="stylesheet" href="/css/main.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <div class="content">
                <form class="user-form" action="/<% if(editing) { %>edit-user <% } else { %>add-user <% } %>  " method="POST">
                    <div class="form-control" >
                        <label for="first_name">First name</label>
                        <input type="text" name="first_name" id="first_name" value="<% if(editing) { %><%=user.first_name %><% } %>" >
                    </div>
					<div class="form-control">
                        <label for="last">Last name</label>
                        <input type="text" name="last_name" id="last_name" value="<% if(editing) { %><%=user.last_name %><% } %>">
                    </div>
                    <div class="form-control">
                        <label for="imageUrl">Image URL</label>
                        <input type="text" name="imageUrl" id="imageUrl" value="<% if(editing) { %><%=user.imageUrl.detail %><% } %>">
                    </div>
					
					<div class="form-control">
                        <label for="email">Email</label>
                        <input type="email" name="email" id="email" value="<% if(editing) { %><%=user.email %><% } %>">
                    </div>
					
					<div class="form-control">
                        <label for="address">Address</label>
                        <input type="address" name="address" id="address" value="<% if(editing) { %><%=user.address %><% } %>">
                    </div>
					
					<div class="form-control">
                        <label for="password">Password</label>
                        <input type="password" name="password" id="password" value="<% if(editing) { %><%=user.password %><% } %>">
                    </div>

					<div class="form-control">
                        <label for="comfirm_password">Comfirm password</label>
                        <input type="password" name="comfirm_password" id="comfirm_password">
                    </div>
					
                    <% if(editing) {  %>
                        <input type="hidden" name="userId" value="<%=user._id%>">
                        <% } %>

                            <button class="btn" type="submit"><% if(editing) { %> Update user <% } else { %> Add user <% } %> </button>
                </form>
            </div>
            <%- include('../includes/end.ejs') %>